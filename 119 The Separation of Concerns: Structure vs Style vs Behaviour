document.querySelector("button").classList;

//response:
//DOMTokenListÂ ['btn', value: 'btn']

document.querySelector("button").classList.add("invisible");

//response: <button class="btn invisible">Click Me</button>

document.querySelector("button").classList.remove("invisible");
//response: <button class="btn">Click Me</button>


document.querySelector("button").classList.toggle("invisible");
//response: opposite every time

excercise:
document.querySelector("h1").classList.add("rem10");

.rem10{
  font-size:  10rem;
}
document.querySelector("h1").classList.toggle("rem10");// big 10 rem
document.querySelector("h1").classList.toggle("rem10"); // previous
